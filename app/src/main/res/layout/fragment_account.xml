<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:context=".AccountFragment" android:id="@+id/constrainLayout">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_display" android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toTopOf="@+id/email_display" app:layout_constraintEnd_toEndOf="@+id/email_display"
                app:layout_constraintStart_toStartOf="@+id/email_display" android:textAlignment="center"
                android:textSize="24sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email_display" android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toTopOf="@+id/password_display"
                app:layout_constraintStart_toStartOf="@+id/password_display"
                app:layout_constraintEnd_toEndOf="@+id/password_display" android:textAlignment="center"
                android:textSize="24sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/password_display"
                android:layout_marginBottom="24dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" android:textAlignment="center" android:textSize="24sp"/>
        <Button
                android:text="@string/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logout_button" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/password_display"
                app:layout_constraintStart_toStartOf="@+id/password_display"
                app:layout_constraintEnd_toEndOf="@+id/password_display"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
