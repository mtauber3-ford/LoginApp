<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".AdminFragment" android:id="@+id/constraintLayout">
        <TextView
                android:text="ADMIN Screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/admin_title"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
                android:textAlignment="center" android:textSize="30sp"/>
        <ListView
                android:layout_width="0dp"
                android:layout_height="0dp" android:id="@+id/userListView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/admin_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
